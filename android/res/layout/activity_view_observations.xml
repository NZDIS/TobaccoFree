<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/select_observation"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spnObservations"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="3dp"
                    android:textColor="#FFF"
                    android:text="@string/no_smokers" />

                <TextView
                    android:id="@+id/tvNoSmokersCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#FFF"
                    android:padding="3dp"
                    android:text="0" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:layout_column="1"
                    android:padding="3dp"
                    android:text="@string/adult_smoker" />

                <TextView
                    android:id="@+id/tvAdultSmokerCount"
                    android:layout_width="wrap_content"
                    android:textColor="#FFF"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="0" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#FFF"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="3dp"
                    android:text="@string/adult_with_others" />

                <TextView
                    android:id="@+id/tvAdultSmokerOthersCount"
                    android:layout_width="wrap_content"
                    android:textColor="#FFF"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="0" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#FFF"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="3dp"
                    android:text="@string/child_smoking" />

                <TextView
                    android:id="@+id/tvChildSmokerCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#FFF"
                    android:padding="3dp"
                    android:text="0" />
            </TableRow>

            <View
                android:layout_height="2dp"
                android:background="#FFF" />

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:layout_column="1"
                    android:padding="3dp"
                    android:text="@string/total" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="3dp"
                    android:textColor="#FFF"
                    android:text="0" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnExportObservation"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector"
            android:text="@string/export_selected"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btnEmailObservation"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector"
            android:layout_gravity="center_horizontal"
            android:text="@string/email_selected"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btnExportAll"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector"
            android:text="@string/export_all"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btnEmailAll"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector"
            android:text="@string/email_all"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btnDeleteSelected"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector"
            android:text="@string/delete_selected"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btnDeleteAll"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector"
            android:text="@string/delete_all"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>

</ScrollView>